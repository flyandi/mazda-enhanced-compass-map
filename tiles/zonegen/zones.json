/**
 * Zone definitions
 */

{
	"geofabrik": {

		"source": "geofabrik", 
		"url": "http://download.geofabrik.de/{zone}/{region}/{subregion}",

		"process": {
			"poly": true,
			"render": true,
			"pbf": false
		},

		"filenames": {
			"poly": "{name}.poly",
			"pbf": "{name}-latest.osm.pbf",
			"render": "{name}.sh",
			"transform": "lowercase,spacedash"
		},

		"output": {
			"poly": "../tilegen/poly/{zone}/{region}/",
			"render": "../tilegen/zones/{zone}/{region}/"
		},

